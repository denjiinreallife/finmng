<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinancialManagement.EditPopup">
    <VerticalStackLayout Padding="20">
        <Label Text="Edit Item" FontSize="20" HorizontalOptions="Center" />
        <Entry x:Name="DateEntry" Placeholder="Date" Keyboard="Text" />
        <Entry x:Name="TypeEntry" Placeholder="Type" />
        <Entry x:Name="CategoryEntry" Placeholder="Category" />
        <Entry x:Name="ValueEntry" Placeholder="Value" Keyboard="Numeric" />
        <Button Text="Save" Clicked="OnSaveClicked" />
        <Button Text="Cancel" Clicked="OnCancelClicked" />
    </VerticalStackLayout>
</ContentPage>
